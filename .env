# Environment Configuration for AI Code Evaluator
# Copy this to .env and fill in your API keys

# Groq API Key
# Get from: https://console.groq.com
# Optional - comment out if not using Groq
GROQ_API_KEY=
# OpenAI API Key  
# Get from: https://platform.openai.com/api-keys
# Optional - comment out if not using OpenAI
OPENAI_API_KEY= 
# Ollama Configuration (for local Llama)
# Make sure Ollama is running: ollama serve
# Default localhost:11434
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Evaluation Settings
NUM_TEST_RUNS=2
BATCH_SIZE=5
TIMEOUT_SECONDS=30

# Logging
LOG_LEVEL=INFO
